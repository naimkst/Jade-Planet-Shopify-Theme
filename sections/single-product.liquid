<script>
  window.product = {{ product | json }} || {}
</script>
<script type="application/json">
  {{ product.variants | json }}
</script>
<!-- start page-title -->
<section class="page-title">
  <div class="page-title-container">
    <div class="page-title-wrapper">
      <div class="container">
        <div class="row">
          <div class="col col-xs-12">
            <h2>{{ product.title }}</h2>
            <ol class="breadcrumb">
              <li><a href="/">Home</a></li>
              <li><a href="/collections/all">Shop</a></li>
            </ol>
          </div>
        </div>
        <!-- end row -->
      </div>
      <!-- end container -->
    </div>
  </div>
</section>
<!-- end page-title -->

<!-- start shop-single-section -->
<section class="shop-single-section section-padding">
  <div class="container-1410">
    <div class="row">
      <div class="col col-md-6">
        <div class="shop-single-slider">
          <div class="slider-for">
            {% for image in product.images %}
              <div><img src="{{ image.src | img_url: '550x550' }}" alt></div>
            {% endfor %}
          </div>
          <div class="slider-nav">
            {% for image in product.images %}
              <div><img src="{{ image.src | img_url: '80x80' }}" alt></div>
            {% endfor %}
          </div>
        </div>
      </div>

      <div class="col col-md-6">
        <div class="product-details">
          <h2>{{ product.title }}</h2>
          <div class="price">
            <span class="current">{{ product.price | money }}</span>
            <span class="old">{{ product.compare_at_price_max | money }}</span>
          </div>
          <div class="rating">
            <i class="fi flaticon-star"></i>
            <i class="fi flaticon-star"></i>
            <i class="fi flaticon-star"></i>
            <i class="fi flaticon-star"></i>
            <i class="fi flaticon-star-social-favorite-middle-full"></i>
            <span>(2 Customer review)</span>
          </div>
          <p>
            {{ product.description | truncate: 270 }}
          </p>

          <div class="product-option">
            <form class="form" action="/cart/add" method="post" enctype="multipart/form-data" id="addToCart">
              <input
                type="hidden"
                class="variant-idss"
                id="variant-id"
                name="id"
                value="{{ product.variants.first.id }}"
              >
              <div class="product-row">
                <div>
                  <input class="product-count" type="text" value="1" name="product-count">
                </div>
                <div>
                  <button type="submit">Add to cart</button>
                </div>
              </div>
            </form>
          </div>

          <div class="thb-product-meta-before">
            <div class="add-to-wishlist">
              <a href="#" class="add_to_wishlist">
                <i class="pe-7s-like"></i>
                <span>Add To Wishlist</span>
              </a>
            </div>

            <div class="product_meta">
              {%- assign current_variant = product.selected_or_first_available_variant -%}
              {% if current_variant.sku != blank %}
                <span class="sku_wrapper"
                  >SKU: <span class="sku">{{ current_variant.sku }}</span></span
                >
              {% endif %}

              <span class="posted_in"
                >Categories:
                {% for collection in product.collections %}
                  <a href="{{ collection.url }}">{{ collection.title }}</a>,
                {% endfor %}
              </span>

              <span class="tagged_as"
                >Tags:
                {% for tag in product.tags %}
                  <a href="{{ tag.url }}">{{ tag }}</a>,
                {% endfor %}
              </span>
            </div>
          </div>
        </div>
      </div>
      <!-- end col -->
    </div>
    <!-- end row -->

    <div class="row">
      <div class="col col-xs-12">
        <div class="single-product-info">
          <!-- Nav tabs -->
          <ul class="nav nav-tabs" role="tablist">
            <li class="active"><a href="#01" data-toggle="tab">Description</a></li>
            <li><a href="#02" data-toggle="tab">Review (03)</a></li>
          </ul>

          <!-- Tab panes -->
          <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="01">
              {{ product.description }}
            </div>
            <div role="tabpanel" class="tab-pane fade" id="02">
