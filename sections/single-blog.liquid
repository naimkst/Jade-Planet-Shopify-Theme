<!-- start blog-single-section -->
<section class="blog-single-section section-padding">
  <div class="container-1410">
    <div class="row">
      <div class="col col-md-9">
        <div class="blog-content">
          <div class="post format-standard-image">
            <div class="entry-media">
              <img src="{{ article.image  | img_url: 'original' }}" alt>
            </div>
            <div class="entry-meta">
              <div class="date">{{ article.published_at | date: '%B %d, %Y' }}</div>
              <div class="tags">
                {% for tag in article.tags %}
                  <a href="{{ tag.url }}">{{ tag }}</a>,
                {% endfor %}
              </div>
            </div>
            <h2>{{ article.title }}</h2>
            {{ article.content }}
          </div>

          <div class="share">
            <i class="pe-7s-share"></i>
            <ul>
              <li><a href="#">Facebook</a></li>
              <li><a href="#">Twitter</a></li>
              <li><a href="#">Pinterest</a></li>
              <li><a href="#">Instagram</a></li>
            </ul>
          </div>

          <div class="author-box">
            <div class="author-avatar">
              <a href="#" target="_blank"
                ><img
                  src="{{ 'author.jpg' | asset_url }}"
                  alt
              ></a>
            </div>
            <div class="author-content">
              <a href="#" class="author-name">Author: Naim</a>
              <p>
                Housed in a nice, gilded frame. It showed a lady fitted out with a fur hat and fur boa who sat upright,
                raising a heavy fur muff that covered the whole of her lower arm towards
              </p>
              <div class="socials">
                <ul class="social-link">
                  <li>
                    <a href="#"><i class="ti-facebook"></i></a>
                  </li>
                  <li>
                    <a href="#"><i class="ti-twitter-alt"></i></a>
                  </li>
                  <li>
                    <a href="#"><i class="ti-linkedin"></i></a>
                  </li>
                  <li>
                    <a href="#"><i class="ti-instagram"></i></a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <!-- end author-box -->

          <div class="more-posts">
            <div class="previous-post">
              <a href="#">
                <span class="post-control-link">Previous Post</span>
              </a>
            </div>
            <div class="next-post">
              <a href="0">
                <span class="post-control-link">Next Post</span>
              </a>
            </div>
          </div>

          <div class="comments-area">
            <div class="comments-section">
              <h3 class="comments-title">3 Comments</h3>
              <ol class="comments">
                <li class="comment even thread-even depth-1" id="comment-1">
                  <div id="div-comment-1">
                    <div class="comment-theme">
                      <div class="comment-image">
                        <img
                          src="{{ 'img-1.jpg' | asset_url }}"
                          alt
                        >
                      </div>
                    </div>
                    <div class="comment-main-area">
                      <div class="comment-wrapper">
                        <div class="comments-meta">
                          <h4>Dichel newn <span class="comments-date">Nov 25, 2023</span></h4>
                        </div>
                        <div class="comment-area">
                          <p>
                            Housed in a nice, gilded frame. It showed a lady fitted out with a fur hat and fur boa who
                            sat upright, raising a heavy fur muff that covered the whole of her lower arm towards
                          </p>
                          <div class="comments-reply">
                            <a class="comment-reply-link" href="#">
                              <i
                                class="pe-7s-repeat"
                              ></i
                              ><span>Reply</span></a
                            >
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <ul class="children">
                    <li class="comment">
                      <div>
                        <div class="comment-theme">
                          <div class="comment-image">
                            <img
                              src="{{ 'img-2.jpg' | asset_url }}"
                              alt
                            >
                          </div>
                        </div>
                        <div class="comment-main-area">
                          <div class="comment-wrapper">
                            <div class="comments-meta">
                              <h4>Dichel newn <span class="comments-date">Nov 25, 2023</span></h4>
                            </div>
                            <div class="comment-area">
                              <p>
                                Housed in a nice, gilded frame. It showed a lady fitted out with a fur hat and fur boa
                                who sat upright, raising a heavy fur muff that covered the whole of her lower arm
                                towards
                              </p>
                              <div class="comments-reply">
                                <a class="comment-reply-link" href="#">
                                  <i
                                    class="pe-7s-repeat"
                                  ></i
                                  ><span>Reply</span></a
                                >
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      <ul>
                        <li class="comment">
                          <div>
                            <div class="comment-theme">
                              <div class="comment-image">
                                <img
                                  src="{{ 'img-3.jpg' | asset_url }}"
                                  alt
                                >
                              </div>
                            </div>
                            <div class="comment-main-area">
                              <div class="comment-wrapper">
                                <div class="comments-meta">
                                  <h4>
                                    Dichel newn
                                    <span
                                      class="comments-date"
                                      >Nov 25, 2023</span
                                    >
                                  </h4>
                                </div>
                                <div class="comment-area">
                                  <p>
                                    Housed in a nice, gilded frame. It showed a lady fitted out with a fur hat and fur
                                    boa who sat upright, raising a heavy fur muff that covered the whole of her lower
                                    arm towards
                                  </p>
                                  <div class="comments-reply">
                                    <a class="comment-reply-link" href="#">
                                      <i
                                        class="pe-7s-repeat"
                                      ></i
                                      ><span>Reply</span></a
                                    >
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </li>
                      </ul>
                    </li>
                  </ul>
                </li>

                <li class="comment">
                  <div>
                    <div class="comment-theme">
                      <div class="comment-image">
                        <img
                          src="{{ 'img-1.jpg' | asset_url }}"
                          alt
                        >
                      </div>
                    </div>
                    <div class="comment-main-area">
                      <div class="comment-wrapper">
                        <div class="comments-meta">
                          <h4>Vodor <span class="comments-date">says Oct 15, 2023 at 11:00am</span></h4>
                        </div>
                        <div class="comment-area">
                          <p>
                            When Gregor Samsa woke from troubled dreams, he found himself transformed in his bed into a
                            horrible vermin. He lay on his armour-like back
                          </p>
                          <div class="comments-reply">
                            <a class="comment-reply-link" href="#">
                              <i
                                class="pe-7s-repeat"
                              ></i
                              ><span>Reply</span></a
                            >
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
              </ol>
            </div>
            <!-- end comments-section -->

            <div class="comment-respond">
              <h3 class="comment-reply-title">Leave your thought</h3>
              <form method="post" id="commentform" class="comment-form">
                <div class="form-textarea">
                  <textarea id="comment" placeholder="Write Your Comments..."></textarea>
                </div>
                <div class="form-inputs">
                  <input placeholder="Website" type="url">
                  <input placeholder="Name" type="text">
                  <input placeholder="Email" type="email">
                </div>
                <div class="form-submit">
                  <input id="submit" value="Post Comment" type="submit">
                </div>
              </form>
            </div>
          </div>
          <!-- end comments-area -->
        </div>
      </div>

      <div class="col col-md-3">
        <div class="blog-sidebar">
          <div class="widget search-widget">
            <h3>Search</h3>
            <form action="{{ routes.search_url }}">
              <div>
                <input type="text" placeholder="Search Post.." name="q">
                <button type="submit"><i class="ti-search"></i></button>
              </div>
            </form>
          </div>
          <div class="widget category-widget">
            <h3>Tags</h3>
            <ul>
              {% for tag in article.tags %}
                <li>
                  <a href="{{ tag.url }}">
                    {{- tag }}
                    <span>({{ tag.size }})</span></a
                  >
                </li>
              {% endfor %}
            </ul>
          </div>
          <div class="widget recent-post-widget">
            <h3>Recent post</h3>
            <div class="posts">
              {% assign limit = section.settings.blog_limit | default: 3 %}
              {% for article in blogs.news.articles limit: 5 %}
                <div class="post">
                  <div class="img-holder">
                    <img src="{{ article.image | img_url: 'original' }}" alt>
                  </div>
                  <div class="details">
                    <h4>
                      <a href="{{ article.url }}">{{ article.title }}</a>
                    </h4>
                    <span class="date">{{ article.published_at | date: '%B %d, %Y' }}</span>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
          {% comment %}
            <div class="widget about-widget">
              <h3>About</h3>
              <p>
                Aowards the viewer hregor then turned to look out the window at the dull weather towards the viewer regor
                then turned to look
              </p>
            </div>
            <div class="widget tag-widget">
              <h3>Tags</h3>
              <ul>
                <li><a href="#">Plant</a></li>
                <li><a href="#">Apple</a></li>
                <li><a href="#">Orange</a></li>
                <li><a href="#">Tree</a></li>
                <li><a href="#">Flower</a></li>
                <li><a href="#">Interior</a></li>
              </ul>
            </div>
          {% endcomment %}
        </div>
      </div>
    </div>
  </div>
  <!-- end container -->
</section>
<!-- end blog-single-section -->
